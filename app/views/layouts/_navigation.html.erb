  <div class="account">
    <section>
      <p class="navbar-text">
      <% if user_signed_in? %>

              <section style="text-align: center">
               <span data-remote="<%= play_display_user_profile_path%>"
                     data-toggle="modal"
                     data-target="#basicModal">
                 <% if current_user.hide_image %>
                     <%= image_tag '/images/original/missing.png', style: 'border-radius: 50%; height: 35px' %>
                 <% else %>
                     <%= image_tag current_user.avatar.url, style: 'border-radius: 50%; height: 35px' %>
                 <% end %>
               </span>

          <% if current_user.location? %>
             <strong> <%= current_user.location %> | </strong>
          <% end %>

          <strong> <%= current_user.email %></strong>

          | Level: <%= current_user.level %>

          | Points: <%= current_user.points %>

                | <%= link_to "Purchase Points", new_charge_path %>

            <% if current_user.admin %>

                    | <%= link_to "Admin Dashboard", admin_dashboard_path %>

                <% elsif current_user.reviewer %>

                    | <%= link_to "Reviewer Dashboard", admin_dashboard_path %>
            <% end %>

            | <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          <section style="padding-top: 10px;text-align: center">
              <span data-remote="<%= play_display_user_profile_path%>"
                    data-toggle="modal"
                    data-target="#basicModal">
                    <% if current_user.has_new_achievement %>
                        <i class="fa fa-exclamation-circle fa-3x fa-fw"></i>
                    <% else %>
                        <i class="fa fa-user fa-3x fa-fw"></i>
                    <% end %>
              </span>

              <span data-remote="<%= play_display_friends_path%>"
                    data-toggle="modal"
                    data-target="#basicModal">
                <i class="fa fa-users fa-3x fa-fw"></i>
              </span>

            <span data-remote="<%= new_question_path %>"
                  data-toggle="modal"
                  data-target="#basicModal">
              <i class="fa fa-server fa-3x fa-fw"></i>
            </span>

              <span data-remote="<%= edit_user_registration_path %>"
                    data-toggle="modal"
                    data-target="#basicModal">
                    <i class="fa fa-cog fa-3x fa-fw"></i>
              </span>

            <span data-remote="<%= play_display_game_stats_path%>"
                  data-toggle="modal"
                  data-target="#basicModal">
              <i class="fa fa-list-alt fa-3x fa-fw"></i>
              </span>

            <% muteStatus = "fa fa-volume-up fa-3x fa-fw"
               if current_user.muted
                 muteStatus = "fa fa-volume-off fa-3x fa-fw"
               end %>


            <span id="un-mute">
                <i class="<%= muteStatus %>"></i>
              </span>

