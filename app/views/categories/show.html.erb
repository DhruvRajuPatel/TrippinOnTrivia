<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @category.title %>

</p>

<h2>Questions</h2>
<% @category.questions.each do |question| %>
    <p>
      <strong>Title:</strong>
      <%= question.title %>
    </p>

    <p>
      <strong>Rating:</strong>
      <%= question.rating %>
    </p>

    <% question.answers.each do |answer| %>
        <p>
          <strong>Title:</strong>
          <%= answer.title %>
        </p>
    <% end %>

<% end %>

<h2>Add a question:</h2>
<%= form_for([@category, @category.questions.new]) do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :rating %><br>
      <%= f.text_field :rating %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>

<h2>Add a trophy:</h2>
<%= form_for([@category, @category.trophies.new]) do |f| %>
      <%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
