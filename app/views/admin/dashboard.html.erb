<!--Display these fields if a admin is logged in.-->

<% if !current_admin.reviewer %>

<h2>Users</h2>
<ul>
  <% for user in @users %>
      <li>
        <%=h user.email %>
        - <%= link_to "Remove", admin_destroy_user_path(user), method: :delete %>
      </li>
  <% end %>
</ul>
<% end %>

<% if current_admin.reviewer %>
    <h2>Questions</h2>
    <% for question in @questions %>
        <% if question.user_submitted %>
            <label>Title</label><br>
            <%= question.title %><br>

            <label>Correct Answer</label><br>
            <% for answer in question.answers %>
                <% if answer.is_correct %>
                    <label>Correct Answer</label><br>
                    <%= answer.title %>
                <% end %>
            <% end %>

        <% end %>
    <% end %>
<% end %>