<h2><%= @random_category.title %></h2>
<p><%= @random_question.title %></p>
<tbody>
<% @random_question.answers.all.shuffle.each do |answer| %>
    <button id=<%= answer.title.gsub(/\s+/, "") %> type="button" name=<%= answer.title %> value=<%= answer.is_correct %>><%= answer.title %></button><br>
    <label ID="value"></label>
    <script type ="text/javascript" charset="utf-8">
        $(document).ready(function(){
            $(<%= answer.title.gsub(/\s+/, "") %>).click(function() {
                <% if answer.is_correct %>
                    alert('Congrats, you were right!!!!');
                    location.reload();
                <% else %>
                    alert('Wrong! Next players turn!!!!');
                    location.reload();
                <% end %>
            })
        });
    </script>
<% end %>
</tbody>