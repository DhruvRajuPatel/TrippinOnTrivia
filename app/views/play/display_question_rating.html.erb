<div class="text-center">
    <h1>How did you feel about that?</h1><br><br>
    <button style="background-color: #2541c3"id="fun" type="button" class="btn btn-primary btn-lg btn-block">
      Radical!
    </button>
    <br>
    <button style="background-color: #2541c3"id="boring" type="button" class="btn btn-primary btn-lg btn-block">
      Bummer...
    </button>
    <br>
    <button style="background-color: #2541c3"id="submit_question" type="button" class="btn btn-primary btn-lg btn-block">
      Submit a Question!
    </button>
    <br>
</div>

<script>
    $(function() {
        $('#fun').click(function() {
            <%= current_user.active_player.current_question.increment!(:rating) %>
            ChangePage()
        });
        $('#boring').click(function() {
            <%= current_user.active_player.current_question.decrement!(:rating) %>
            ChangePage()
        });
        $('#submit_question').click(function() {
            $('body').load('<%= new_question_path %>');
        });
        $.ajax({
            url: "play/finish_question",
            type: 'PUT'
        });
        function ChangePage()
        {
            var meter = <%= current_user.active_player.meter %>;

            if (meter == <%= PlayController::FULL_METER_AMOUNT%>) {
                $('body').load('/play/display_full_meter_choice.html');
            }
            else if (<%= current_user.active_player.isActivePlayer && !current_user.active_player.challenges.first.nil? %>){
                $('body').load('/play/display_questions.html');
            }
            else {
                $('body').load('/play/display_spinner.html');
            }
        }
    });
</script>