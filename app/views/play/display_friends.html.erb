<table style="width: 75%; margin: 0 auto;">
  <tr>
    <th colspan="3" style="text-align: center">Users</th>
  </tr>

  <% if !@user %>
      <% for user in @users %>
          <% if user.id != current_user.id  %>
              <tr>
                <td>
                  <% if user.hide_image %>
                      <%= image_tag '/images/original/missing.png', style: 'border-radius: 50%;' %>
                  <% else %>
                      <%= image_tag user.avatar.url, style: 'border-radius: 50%;' %>
                  <% end %>
                </td>
                <td>
                  <%= user.email %>
                </td>

                <td>
                  <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
                </td>

              </tr>
          <% end %>
      <% end %>
  <% else %>

      <tr>
        <td>
          <% if @user.hide_image %>
              <%= image_tag '/images/original/missing.png', style: 'border-radius: 50%;' %>
          <% else %>
              <%= image_tag @user.avatar.url, style: 'border-radius: 50%;' %>

          <% end %>
        </td>
        <td>
          <%= @user.email %>
        </td>

        <td>
          <%= link_to "Add Friend", friendships_path(:friend_id => @user), :method => :post %>
        </td>

      </tr>

  <% end %>

</table>

<div style="text-align:center; padding: 15px;" >
  <%= form_tag play_display_friends_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag 'Search By Email', :name => nil, :class => 'btn' %>
      </p>
  <% end %>
</div>