<h2>All Users</h2>
<ul>
  <% for user in @users %>
      <% if !current_user.friendships.nil? %>
<% if current_user.friendships.find(user.id) %>
          <li>
            <%=h user.email %> - (<%= link_to "remove",:method => :delete %>)
          </li>
      <% else %>
          <li>
            <%=h user.email %>
            - <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
          </li>
      <% end %>
  <% end %>
  <% end %>
</ul>