<table style="width: 50%;margin: 0 auto;">
  <tr>
    <th colspan="3" style="text-align: center">Users</th>
  </tr>
  <% for user in @users %>
      <% if user.id != current_user.id  %>
          <tr>
            <td>
              <%= image_tag user.avatar.url %>
            </td>

            <td>
              <%= user.email %>
            </td>

            <td>
              <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
            </td>

          </tr>
      <% end %>
  <% end %>

</table>