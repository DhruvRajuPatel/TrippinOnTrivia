<div class="text-center" id="profile">
    <button style="background-color: #2541c3" onclick="GoBack()" type="button" class="btn btn-primary">
    BACK</button><br>
    <br>
  <h2>STATISTICS</h2>
  <br>
  <h4>QUESTIONS CORRECT BY CATEGORY</h4>
  <div class="text-justify">
  <h3>Computer Science: <%= current_user.cs_counter.questions_correct %></h3>
  <h3>Aquatic Animals: <%= current_user.aquatic_counter.questions_correct %></h3>
  <h3>Memes: <%= current_user.memes_counter.questions_correct %></h3>
  <h3>Basketball: <%= current_user.basketball_counter.questions_correct %></h3>
  <h3>Literature: <%= current_user.literature_counter.questions_correct %></h3>
  <h3>Music: <%= current_user.music_counter.questions_correct %></h3>
  </div>
  <br>
  <h2>ACHIEVEMENTS</h2>
  <% if current_user.achievements.count > 0 %>
  <% current_user.achievements.each do |achievement|  %>

        <h6 class="text-justify"><%= achievement.title %></h6>
    <% end %>
    <% current_user.achievements.each do |achievement|  %>

        <% trophy = achievement.category.trophy %>

        <img id="trophy" src= <%= trophy.icon_path%>>

    <% end %>
      <% else %>
      <br>
  <h4>NONE</h4>
      <% end %>
</div>



<script>
    function GoBack()
    {
        window.location.replace("/");
    }
</script>


